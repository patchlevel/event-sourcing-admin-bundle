<dl class="divide-y divide-gray-100">
    {{ _self.text('ID', projection.id.toString) }}
    {{ _self.text('Name', projection.id.name) }}
    {{ _self.text('Version', projection.id.version) }}
    {# { _self.text('Class', 'unknown') }#}
    {{ _self.text('Position', projection.position) }}
    {{ _self.text('Status', projection.status.value) }}

    {% if projection.error %}
        <div class="rounded-md bg-red-50 p-4">
            <div class="flex">
                <div class="flex-shrink-0">
                    <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                    </svg>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">{{ projection.error.errorMessage }}</h3>
                </div>
            </div>
        </div>
        {% if projection.error.errorContext %}
        <div class="json">
            {{~ projection.error.errorContext|json_encode(constant('JSON_PRETTY_PRINT')) ~}}
        </div>
        {% endif %}
    {% endif %}

</dl>

{% macro text(name, content) %}
    <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">{{ name }}</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-500 sm:col-span-2 sm:mt-0">{{ content }}</dd>
    </div>
{% endmacro %}

{% macro json(name, content) %}
    <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm font-medium leading-6 text-gray-900">{{ name }}</dt>
        <dd class="mt-1 text-sm leading-6 text-gray-500 sm:col-span-2 sm:mt-0">
            <div class="json">
                {{~ content ~}}
            </div>
        </dd>
    </div>
{% endmacro %}
